# JWT Secret Key - CHANGE THIS IN PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# OpenAI API Key for AI-powered grading (optional)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# AI Grading Configuration
# Set to 'false' to use mock grading instead of OpenAI
USE_AI_GRADING=true

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (if using a real database later)
# DATABASE_URL=postgresql://username:password@localhost:5432/exam_system

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5000

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this

# Security Configuration
BCRYPT_ROUNDS=10
TOKEN_EXPIRY=24h

# Email Configuration (for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Exam Configuration
DEFAULT_EXAM_DURATION=60
MAX_EXAM_DURATION=480
AUTO_SUBMIT_GRACE_PERIOD=30
